<div class="container-fluid">
  <div class="row">
    <div class="col-md-8">
    </div>
    <div class="col-md-4">
      <div class="row">
        <div class="col-md-4">
          <p>Preis: <%= @summary_price %>â‚¬</p>
        </div>
        <div class="col-md-4">
          <p>Gewicht: </p> <p id="price"><%= @summary_weight %></p><p>g</p>
        </div>
        <div class="col-md-4">
          <p>Kaufen</p>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <div class="row">
          <% @ingredients.each do |ingredient| %>
            <div class="col-md-3 p-3" id= <%= ingredient.name %>>
                <%= render 'shared/card_ingredient', ingredient_within: ingredient %>
            </div>
          <% end %>

      </div>
    </div>
    <div class="col-md-4 p-3">
      <%= render 'shared/jar', dose_within: @doses %>
      <%= button_to "delete", delete_all_doses_path, method: "delete", remote:  true %>

    </div>
  </div>
  <div class="row">
    <div class="col-md-2 text-center" >
      <%= render 'shared/pie-chart', summary_protein_within: @summary_protein, remote: true %>
      <p><%= @summary_protein %> Gramm </p>
    </div>
    <div class="col-md-2">
      <p>JS added</p>
      <p id="target"></p>
    </div>
    <div class="col-md-2">
    </div>
    <div class="col-md-2">
    </div>
    <div class="col-md-2">
    </div>
    <div class="col-md-2">
    </div>
  </div>
</div>

<script>
  document.getElementById("Lainsamen").addEventListener("click", increaseOrder);
  function increaseOrder() {
    document.getElementById("target").innerHTML = "I WANT THIS TEXT TO STAY";
  }
</script>




