<div class="container-fluid">
  <div class="row">
    <div class="col-md-8">
    </div>
    <div class="col-md-4">
      <div class="row">
        <div class="col-md-4">
          <h4>Preis: <%= @summary_price %>â‚¬</h4>
        </div>
        <div class="col-md-4">
          <h4>Gewicht: <%= @summary_weight %> Gramm</h4>
        </div>
        <div class="col-md-4">
          <h4>Kaufen</h4>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <div class="row">
          <% @ingredients.each do |ingredient| %>
            <div class="col-md-3 p-3">
                <%= render 'shared/card_ingredient', ingredient_within: ingredient %>
            </div>
          <% end %>

      </div>
    </div>
    <div class="col-md-4 p-3">
      <%= render 'shared/jar', dose_within: @doses %>
      <%= button_to "delete", delete_all_doses_path, method: "delete" %>

    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
        <canvas id="myChart"></canvas>
      <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
      <script>
        // === include 'setup' then 'config' above ===

        const DATA_COUNT = 1;
        const NUMBER_CFG = {count: DATA_COUNT, min: 0, max: 100};

        const data = {
          // labels: ['Red', 'Orange'],
          datasets: [
            {
              label: 'Dataset 1',
              data: [<%= @summary_protein %>, <%= 80 - @summary_protein  %>],
              backgroundColor: Object.values([
                                              '#4dc9f6',
                                              '#f67019'
                                            ]),
            }
          ]
        };

        const config = {
          type: 'pie',
          data: data,
          options: {
            responsive: true,
            plugins: {
              legend: {
                position: 'top',
              },
              title: {
                display: true,
                text: 'Daily Protein'
              }
            }
          },
        };

        var myChart = new Chart(
          document.getElementById('myChart'),
          config
        );
      </script>
    </div>
    <div class="col-md-2">
    </div>
    <div class="col-md-2">
    </div>
    <div class="col-md-2">
    </div>
    <div class="col-md-2">
    </div>
    <div class="col-md-2">
    </div>
  </div>
</div>






